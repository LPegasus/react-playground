{
  "compilerOptions": {
    // "allowJs": true,
    "target": "es6",
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "jsxFactory": "React.createElement",
    "module": "commonjs",
    // "noResolve": false,
    "importHelpers": true,
    // "outDir": "./dist",
    "moduleResolution": "node",
    "declaration": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": [
    "src/**/*",
    "test/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
